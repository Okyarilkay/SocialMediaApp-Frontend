@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
</head>
<body>
    <div class="container">

        @* Sayfanın header alanı *@
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <div class="col-md-3 mb-2 mb-md-0">
                <a href="#" class="d-inline-flex align-items-center link-body-emphasis text-decoration-none">
                    <img class="img-fluid rounded-circle me-2" src="https://bilimgenc.tubitak.gov.tr/sites/default/files/styles/bp-770px-custom_user_desktop_1x/public/insan_gozu_ile_fotograf_makinesini_karsilastiralim_9.jpg?itok=QnxM4Zxz" width="50"
                         height="100" alt=""> Sosyal Medya Projesi
                </a>
            </div>
            <ul class="nav menu col-12 col-md-auto align-items-center justify-content-center mb-md-0">
                <li class="nav-link px-2 me-3 border">
                    <a href="../Home/Index" class="text-decoration-none">
                        <i class="bi bi-house me-2"></i>Anasayfa
                    </a>
                </li>


                <li class="nav-link px-2 text-black me-3 border">
                    <a href="../Home/Profile" class="text-decoration-none">
                        <i class="bi bi-person-circle me-2"></i>Profilim
                    </a>
                </li>
                <li class="nav-link px-2 text-black me-3 border border-1 border-primary">
                    <a href="../Home/Settings" class="text-decoration-none"><i class="bi bi-gear-fill me-2"></i>Ayarlar</a>
                </li>
                <li class="nav-link px-2 border">
                    <a href="" class="btn-outline-danger">
                        <i class="bi bi-box-arrow-in-left me-2"></i>Çıkış Yap
                    </a>
                </li>
            </ul>
            <div class="col-md-3 text-end">
                <a type="button" href="../Home/Login" class="btn btn-outline-primary me-2"><i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap</a>
                <a type="button" href="../Home/Register" class="btn btn-primary me-2"><i class="bi bi-at me-2"></i>Kayıt Ol</a>
            </div>
        </header>
        <main class="d-flex justify-content-center">

            @* Sayfanın sol sticky bölgesi*@
            <div id="leftSideMenu" class="sticky-top col-2 justify-content-start text-center h-50 py-1 px-1">
                <div class="border border-1 mb-4 mt-3 shadow h-auto">
                    <a href="#" class="d-inline-flex align-items-center link-body-emphasis text-decoration-none">
                        <img class="img-fluid rounded-circle me-2" src="https://bilimgenc.tubitak.gov.tr/sites/default/files/styles/bp-770px-custom_user_desktop_1x/public/insan_gozu_ile_fotograf_makinesini_karsilastiralim_9.jpg?itok=QnxM4Zxz"
                             width="50" height="70" alt="">
                    </a>
                    <h6>Osman Okyar</h6>


                    <div class="align-item-center justify-content-center justify-content-md-between mb-5">
                        <a class="col-6 border py-1 px-1 mb-5 float-start text-decoration-none" href="#">test</a>
                        <a class="col-6 border py-1 px-1 mb-5 float-end text-decoration-none" href="#">test2</a>
                    </div>
                </div>
                <ul class="nav menu d-inline col-12 col-md-auto mb-2 align-items-center justify-content-center mb-md-0">
                    <li class="nav-link">
                        <a href="../Home/Index" class="text-decoration-none">
                            Anasayfa
                        </a>
                    </li>
                    <li class="nav-link text-dark my-2">
                        <a href="../Home/Profile" class="text-decoration-none">Profilim</a>
                    </li>
                    <li class="nav-link text-dark border border-1 border-primary mb-2">
                        <a href="../Home/Settings" class="text-decoration-none">Ayarlar</a>
                    </li>
                    <a class="btn btn-outline-danger" href="">Çıkış yap </a>
                </ul>
            </div>

            @* İçerik ve yorum alanı *@
            <div id="mainContent" class="col-10 d-flex flex-wrap col-12 col-md-auto mb-2 align-items-start justify-content-center p-1 mx-auto">
                <div class="row">
                    <h4 class="text-center mb-4">- Kullanıcı Bilgileri -</h4>
                    <form action="#" method="post">
                        <div class="input-group mb-3">
                            <span class="input-group-text">First and last name</span>
                            <input type="text" aria-label="First name" class="form-control">
                            <input type="text" aria-label="Last name" class="form-control">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text">Email</span>
                            <input type="email" aria-label="Email" class="form-control">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text">Şifre</span>
                            <input type="password" aria-label="Şifre" class="form-control">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text">Şifre onay</span>
                            <input type="password" aria-label="ŞifreOnay" class="form-control">
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Cinsiyet</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Seçiniz...</option>
                                <option value="1">Erkek</option>
                                <option value="2">Kadın</option>
                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text">Telefon</span>
                            <input id="tel" type="tel" aria-label="telefon" class="form-control">
                        </div>

                        <div class="input-group mb-3">
                            <input type="file" class="form-control" id="inputGroupFile01">
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>

                        
                    </form>
                </div>


            </div>

            
        </main>
    </div>
    <script src="~/js/jquery-input-mask-phone-number.js"></script>
    <script>
        $(document).ready(function () {
            $('#tel').usPhoneFormat({
                format : '(xxx) xxx-xxxx',
            })
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>